{
  "params": {
    "type": "object",
    "title": "Parameters",
    "properties": {
      "stepType": {
        "title": "Step type",
        "type": "string",
        "enum": [
          "data-source",
          "data-processing",
          "data-sink"
        ],
        "propertyOrder": 1
      },
      "name": {
        "title": "Name",
        "type": "string"
      },
      "stepImplementation": {
        "title": "Step Implementation",
        "type": "string",
        "enum": [
          "container-implementation"
        ]
      },
      "image": {
        "title": "Image",
        "type": "string"
      },
      "environmentParameters": {
        "title": "Env. Parameters",
        "type": "array",
        "items": {
          "type": "object",
          "title": "key-value",
          "properties": {
            "key": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "key",
            "value"
          ]
        }
      },
      "resourceProvider": {
        "title": "Resource Provider",
        "type": "string",
        "items": {
          "type": "string"
        },
        "enum": [],
        "format": "select2"
      },
      "executionRequirement": {
        "type": "object",
        "title": "Exec. Requirement",
        "collapsed": true,
        "properties": {
          "hardRequirements": {
            "title": "Hard requirements",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reqType": {
                  "type": "string",
                  "enum": [
                    "quantitative",
                    "verticalScale",
                    "horizontalScale"
                  ]
                },
                "min-instance": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "verticalScale"
                  ]
                },
                "max-instance": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "verticalScale"
                  ]
                },
                "min-cpu": {
                  "type": "number",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                },
                "max-cpu": {
                  "type": "number",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                },
                "min-ram-mb": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                },
                "max-ram-mb": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                },
                "min-cores": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                },
                "min-storage-mb": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                },
                "max-storage-mb": {
                  "type": "integer",
                  "requiredWhen": [
                    "reqType",
                    "===",
                    "horizontalScale"
                  ]
                }
              },
              "required": [
                "reqType",
                "value"
              ]
            }
          }
        },
        "required": [
          "hardRequirements",
          "softRequirements"
        ]
      }
    },
    "required": [
      "stepType",
      "name",
      "stepImplementation",
      "implementation",
      "image",
      "environmentParameters",
      "resourceProvider",
      "executionRequirement"
    ]
  },
  "providers": {
    "type": "object",
    "title": "Providers",
    "properties": {
      "providers": {
        "title": "Resource providers",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "provider": {
              "type": "string",
              "enum": [
                "EdgeProvider",
                "CloudProvider",
                "FogProvider"
              ]
            },
            "providerLocation": {
              "type": "string"
            },
            "mappingLocation": {
              "type": "string"
            }
          },
          "required": [
            "provider",
            "name",
            "providerLocation",
            "mappingLocation"
          ]
        }
      }
    },
    "required": [
      "providers"
    ]
  }
}
